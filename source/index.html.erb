   <video id="bgvid" poster="/images/curry_bg.png" preload="auto" autoplay="true">
    <source src="/images/background_video.mp4" type="video/mp4">
  </video>
  
  <script type="text/javascript">
var video= $('#bgvid')[0]; 
var videoJ= $('#bgvid');        
videoJ.on('ended',function(){
    video.load();     
});
</script>


<div class="se-pre-con" id="loader" style="display:none"></div>

<div class="container-fluid">
	
	<%= partial "/partials/new_header" %>
	
	<div class="vertical-spacer"></div>
	<div class="vertical-spacer"></div>
	
	<div class="row">
		
		<div class="col-sm-12" align="center">
			
			<div class="vertical-spacer-lg"></div>
						
			<h1 class="trim-text change_size titleFont" style="margin-bottom:0">PICK LIVE DURING THE GAME</h1>
		
			<hr id="second_hr" style="margin-top:0; margin-bottom:10px">
			
			<h3 class="secondaryTitle" style="margin-top:0">In-Game Fantasy Sports | Real Cash and Prizes</h3>
			
			<div class="vertical-spacer"></div>

			<div class="row">
				
				<div class="col-sm-2 col-sm-offset-3">
					
						<img src="images/new-file.png" alt="" class="iconImage">
						<p align="center" class="image_text">SIGN<br>UP</p>
					
				</div>
				
				<div class='col-sm-2'>
					
					<img src="images/basketball-shirt.png" alt="" class="iconImage">
					<p align="center" class="image_text">REFER<br>FRIENDS</p>
					
				</div>
				
				<div class='col-sm-2'>
					
					<img src="images/podium.png" alt="" class="iconImage">
					<p align="center" class="image_text">GAIN EARLY<br>ACCESS</p>
					
				</div>				
			
			</div>
			
			<div class="vertical-spacer"></div>
			
			<div>
				
			</div>
				<a href="#waitlisted" class="btn customJoinButton" style="padding-top:0;padding-bottom:0">Join The Beta</a>
				<div class="vertical-spacer"></div>
				
				<p class="spaceIsLimited">Space Is Limited</p>
				
				<div class="vertical-spacer"></div>
				
			<a href="/article.html"><button class="btn mybutton" target="_blank">NEWS</button></a>
				 <script>
			    document.addEventListener("DOMContentLoaded", function(event) {
			      window.waitlisted.start({domain: "sqwad.app.waitlisted.co"})
			    });
  			</script>
				
			</div>
			
		</div>
			
			<div id="myModal" class="modal fade" role="dialog">
  			
  			<div class="modal-dialog">

    			<div class="modal-content">
      
      			  <form class="well form-horizontal" action="https://sqwadpage-contact.herokuapp.com" method="post"  id="contact_form">
    
						    <fieldset>
									
						      <legend>Contact Us Today!</legend>
						      
						      <div class="vertical-spacer-lg"></div>

						      <div class="form-group">
						        
						        <label class="col-md-2 control-label">Name</label>  
						        
						        <div class="col-md-8 inputGroupContainer">
						          
						          <div class="input-group">
						          
						            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						        
						            <input  name="name" placeholder="Name" class="form-control" id="name" type="text">
						        
						          </div>
						          
						        </div>
						        
						      </div>
						      
						      <div class="vertical-spacer-lg"></div>
						      
						      <div class="form-group">
						        
						        <label class="col-md-2 control-label">E-Mail</label>  
						            
						        <div class="col-md-8 inputGroupContainer">
						          
						          <div class="input-group">
						          
						            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
						            
						            <input name="email" placeholder="E-Mail Address" class="form-control"  type="email" id="email">
						            
						          </div>
						        
						        </div>
						      
						      </div>
						      
						      <div class="vertical-spacer-lg"></div>
						        
						      <div class="form-group">
						        
						        <label class="col-md-2 control-label">About</label>
						        
						        <div class="col-md-8 inputGroupContainer">
						          
						          <div class="input-group">
						          
						            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
						            
						            <textarea class="form-control" name="comment" placeholder="Whats On Your Mind?" id="comment"></textarea>
						              
						          </div>
						      
						        </div>
						        
						      </div>

						      <!-- Success message -->
						      <div id="success" class="modal fade text-center" role="dialog" style="display:none">
						      	
									  <div class="modal-dialog">
									  	
									    <div class="modal-content">
									    	
									      <div class="modal-header text-left">
									      	
									      	<span class="icon icon-cross " id="dismissModalButton" data-dismiss="modal"></span>
									      
									    	</div>
									        
									        <img src="../images/EmailIcon.png" alt="" height="200" width="200">
									         
									        <h1>Request Recieved!</h1>
									        
									        <h5>Thanks for contacting us, we will get back to you shortly.</h5>
									    
									    </div>
									    
									  </div>
									  
									</div>
						      
						      <div class="alert alert-warning" role="alert" style="display:none" id="blank_error">Oh No! One or more fields was left blank.  Fill in the fields and try again.</div>
						      
						      <div class="alert alert-danger" role="alert" style="display:none" id="posting_error">Oh No! There was a posting error!  Make sure all fields are filled in correctly and try again.</div>
						      
						      <div class="vertical-spacer-lg"></div>
						      
						      <div class="form-group">
						        
						        <label class="col-md-3 control-label"></label>
						        
						        <div class="col-md-8">
						          
						          <button type="submit" class="btn btn-success col-md-4">SEND<span class="glyphicon glyphicon-send"></span></button>
						          
						          <button class="btn btn-danger col-md-4 col-md-offset-1" data-dismiss="modal">Dismiss!</button>
						          
						        </div>
						        
						      </div>
						      
						      <div class="vertical-spacer-lg"></div>

						    </fieldset>
						      
						  </form>
    
    			</div>

  			</div>
			
			</div>
			
		</div>
		
	<div class="vertical-spacer-lg"></div>
	
	<div class="vertical-spacer-lg"></div>
	
</div>