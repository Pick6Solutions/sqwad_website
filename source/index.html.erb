---
title: Sqwad Fantasy
---

<div class="se-pre-con" id="loader" style="display:none"></div>

<%= partial "/partials/header" %>

<div class="container-fluid">
	
	<div class="vertical-spacer-lg #hide_space"></div>
	
	<div class="col-sm-4 col-sm-offset-1" id="hidden">
			
			<img src="images/phone.png">
			
	</div>
	
	<div class="row">
		
		<div class="col-md-4 col-md-offset-2 col-sm-4">
			
			<div class="vertical-spacer-lg remove_on_ipad"></div>
			
			<div class="vertical-spacer-lg"></div>
		
			<div id="outer">
						
				<h1 class="trim-text change_size" id="left-line">THE BEST PLAY LIVE</h1>
		
			</div>
			
			<hr id="first_hr" class="remove_on_ipad">
			
			<h3 id="first_h2" class="change_size real_shrink_text" align="left">SQWAD is a real-time fantasy platform that allows fans to challenge
			 pros and friends for bragging rights and brand rewards.</h3>
			 
			 <div class="vertical-spacer remove_on_phone"></div>
			 <div class="vertical-spacer remove_on_phone"></div>
			 <div class="vertical-spacer remove_on_phone"></div>

			
			<hr id="second_hr" class="remove_on_ipad">
			
			<h3 id="first_h3" class="change_size shrink_big_text" align="left">Be an exclusive beta user</h3>
			
			<h2 class="change_size real_shrink_text" id="second_h2" align="left">Reserve your spot on our waitlist and share to increase your standing(Only first 1000 gaurenteed early access)</h2>

			<div id="sqwad_button">
				
				<a href="#waitlisted" class="btn btn-success">SQWAD UP & Join the waitlist</a>
				
			</div>
			
		</div>
		
		<div class="vertical-spacer-lg show_on_ipad"></div>
		
		<div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-3 remove_on_phone">
			
			<img src="images/phone.png" width="300px" height="auto">
			
		</div>
		
		</div>
		
	</div>
	
	<div class="vertical-spacer-lg"></div>
	
	<div class = "container-fluid black_background">
		
		<div class="vertical-spacer-lg"></div>
		
		<h1 class="trim-text" id="second_title">THE SQWAD</h1>
		
		<div class="vertical-spacer-lg"></div>
		
		<div class = "row">
		
			<div class = "col-sm-2 col-sm-offset-1 col-xs-6" id="add_bracket">
			
				<img src="images/bird.png">
			
			</div>
			
			<div class = "col-sm-2 col-xs-6">
			
				<img src="images/griner.png">
			
			</div>
			
			<div class = "col-sm-2 col-xs-6">
			
				<img src="images/taurasi.png">
			
			</div>
						
			<div class = "col-sm-2 col-xs-6">

				<img src="images/moore.png">

			</div>
			
			<div class = "col-sm-2 col-xs-6">

				<img src="images/loyd.png">

			</div>
		
		</div>
		
		<div class="row">
			
			<div class="col-sm-6 col-sm-offset-3" >
				
				<hr id="tophr">
				<hr id="middlehr">
				<hr id="bottomhr">
			
			</div>
			
			<div class="col-sm-12">
				
				<a id="demo" class="white_color" data-toggle="modal" data-target="#myModal">Contact Us</a>
				
			</div>
			
			<div id="myModal" class="modal fade" role="dialog">
  			
  			<div class="modal-dialog">

    			<div class="modal-content">
      
      			  <form class="well form-horizontal" action="https://sqwadpage-contact.herokuapp.com" method="post"  id="contact_form">
    
						    <fieldset>
									
						      <legend>Contact Us Today!</legend>
						      
						      <div class="vertical-spacer-lg"></div>

						      <div class="form-group">
						        
						        <label class="col-md-2 control-label">Name</label>  
						        
						        <div class="col-md-8 inputGroupContainer">
						          
						          <div class="input-group">
						          
						            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						        
						            <input  name="name" placeholder="Name" class="form-control" id="name" type="text">
						        
						          </div>
						          
						        </div>
						        
						      </div>
						      
						      <div class="vertical-spacer-lg"></div>
						      
						      <div class="form-group">
						        
						        <label class="col-md-2 control-label">E-Mail</label>  
						            
						        <div class="col-md-8 inputGroupContainer">
						          
						          <div class="input-group">
						          
						            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
						            
						            <input name="email" placeholder="E-Mail Address" class="form-control"  type="email" id="email">
						            
						          </div>
						        
						        </div>
						      
						      </div>
						      
						      <div class="vertical-spacer-lg"></div>
						        
						      <div class="form-group">
						        
						        <label class="col-md-2 control-label">About</label>
						        
						        <div class="col-md-8 inputGroupContainer">
						          
						          <div class="input-group">
						          
						            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
						            
						            <textarea class="form-control" name="comment" placeholder="Whats On Your Mind?" id="comment"></textarea>
						              
						          </div>
						      
						        </div>
						        
						      </div>

						      <!-- Success message -->
						      <div id="success" class="modal fade text-center" role="dialog" style="display:none">
						      	
									  <div class="modal-dialog">
									  	
									    <div class="modal-content">
									    	
									      <div class="modal-header text-left">
									      	
									      	<span class="icon icon-cross " id="dismissModalButton" data-dismiss="modal"></span>
									      
									    	</div>
									        
									        <img src="../images/EmailIcon.png" alt="" height="200" width="200">
									         
									        <h1>Request Recieved!</h1>
									        
									        <h5>Thanks for contacting us, we will get back to you shortly.</h5>
									    
									    </div>
									    
									  </div>
									  
									</div>
						      
						      <div class="alert alert-warning" role="alert" style="display:none" id="blank_error">Oh No! One or more fields was left blank.  Fill in the fields and try again.</div>
						      
						      <div class="alert alert-danger" role="alert" style="display:none" id="posting_error">Oh No! There was a posting error!  Make sure all fields are filled in correctly and try again.</div>
						      
						      <div class="vertical-spacer-lg"></div>
						      
						      <div class="form-group">
						        
						        <label class="col-md-3 control-label"></label>
						        
						        <div class="col-md-8">
						          
						          <button type="submit" class="btn btn-success col-md-4">SEND<span class="glyphicon glyphicon-send"></span></button>
						          
						          <button class="btn btn-danger col-md-4 col-md-offset-1" data-dismiss="modal">Dismiss!</button>
						          
						        </div>
						        
						      </div>
						      
						      <div class="vertical-spacer-lg"></div>

						    </fieldset>
						      
						  </form>
    
    			</div>

  			</div>
			
			</div>
			
		</div>
		
	<div class="vertical-spacer-lg"></div>
	
	<div class="vertical-spacer-lg"></div>
	
</div>